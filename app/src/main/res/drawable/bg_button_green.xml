<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp"
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                />
            <size
                android:width="@dimen/button_width"
                android:height="@dimen/button_height"
                />
            <gradient
                android:angle="90"
                android:centerX="50%"
                android:centerColor="#15C248"
                android:startColor="#0C732B"
                android:endColor="#0C732B"
                android:type="linear"
                />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp"
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                />
            <size
                android:width="@dimen/button_width"
                android:height="@dimen/button_height"
                />
            <gradient
                android:angle="90"
                android:centerX="50%"
                android:centerColor="#17D650"
                android:startColor="#9DFA96"
                android:endColor="#9DFA96"
                android:type="linear"
                />
        </shape>
    </item>

    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp"
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="5dp"
                />
            <size
                android:width="@dimen/button_width"
                android:height="@dimen/button_height"
                />
            <gradient
                android:angle="90"
                android:centerX="50%"
                android:centerColor="#17D650"
                android:startColor="#13B042"
                android:endColor="#13B042"
                android:type="linear"
                />
        </shape>
    </item>
</selector>