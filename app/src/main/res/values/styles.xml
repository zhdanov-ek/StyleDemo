<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ButtonBase" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:layout_margin">@dimen/button_layout_margin</item>
    </style>


    <style name="ButtonGoogle" parent="ButtonBase">
        <item name="android:background">@drawable/bg_button_google</item>
        <item name="android:textColor">@color/colorGoogle</item>
    </style>

    <style name="ButtonGreen" parent="ButtonBase">
        <item name="android:background">@drawable/bg_button_green</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="ButtonRed" parent="ButtonBase">
        <item name="android:background">@drawable/bg_button_red</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ButtonGrey" parent="ButtonBase">
        <item name="android:background">@drawable/bg_button_grey</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MyLayout">
        <item name="android:background">@drawable/bg_layout</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/ll_layout_margin</item>
        <item name="android:padding">@dimen/ll_padding</item>
    </style>


</resources>
